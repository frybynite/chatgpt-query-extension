{
  "manifest_version": 3,
  "name": "ChatGPT Custom Prompts",
  "version": "2.0.3",
  "description": "Send selected text to your custom ChatGPT with custom action prompts. Configure actions, shortcuts, and automate your AI workflow.",
  "homepage_url": "https://github.com/keithfry/chatgpt-query-extension",
  "permissions": [
    "contextMenus",
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["shortcuts.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon-16.png",
    "24": "icons/icon-24.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
